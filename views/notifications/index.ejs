              <span>
                <% if(message.type === 'campground'){ %>
                  <%= 'has create a new campground' %>
                <% }else { %>
                  <%= 'has reply to your comment' %>
                <% } %>
              </span>            
            </div>
            <small class="text-warning"><%= moment(message.createdAt).fromNow() %></small>
          </div>
        </a>
      </li>
    <% }) %>

    <% oldMessages.forEach(message => { %>
      <li class="py-2 bg-secondary">
        <a class="row" href="<%= message.type === 'campground' ? '/campgrounds/' + message._id : '/campgrounds' %>">
