<%- include("../partials/header") %>
<div class="container">
  <div class="mw-100 container">
    <div class="row justify-content-center">
      <h1 class="text-center col-12">Edit comment</h1>
      <form
        action="/campgrounds/<%= campgroundId %>/comments/<%= comment._id %>?_method=PUT"
        method="POST"
        class="col-12 my-3"
      >
        <div class="form-group">
          <label for="text">Text</label>
          <input
            type="text"
            class="form-control"
            id="text"
            name="comment[text]"
            value="<%= comment.text %>"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
        <a
          href="/campgrounds/<%= campgroundId %>"
          class="btn btn-secondary btn-block"
          >Go back</a
        >
      </form>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>
